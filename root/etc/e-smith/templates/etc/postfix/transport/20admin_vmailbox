#
# 20admin_vmailbox -- deliver admin's mail through dovecot LMTP listener
#
{
	for my $domain ((
	   'localhost',
	   'localhost.localdomain',
	   join('.', 'localhost', $DomainName),
	   join('.', $SystemName, $DomainName),
	)) {
	   $OUT .= sprintf("admin@%-40s lmtp:unix:/var/run/dovecot/lmtp\n", $domain);
	}
}





