#
# Virtual domains are { 
    use NethServer::MailServer;
    @domainList = ( 
                   NethServer::MailServer->new()->getDeliveryDomains(),
                   NethServer::MailServer::getVirtualMailboxDomain()
                  );
    scalar @domainList ? 'enabled' : 'disabled'; 
}
# 
virtual_alias_maps = { scalar @domainList ? 'hash:/etc/postfix/virtual' : '' }
virtual_mailbox_domains = { join(' ', @domainList) }
virtual_mailbox_maps = { scalar @domainList ? 'hash:/etc/postfix/vmailbox' : '' }
virtual_transport = lmtp:unix:/var/run/dovecot/lmtp

