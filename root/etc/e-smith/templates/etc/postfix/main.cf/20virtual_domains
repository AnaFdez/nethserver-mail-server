#
# Virtual domains are { 
    use NethServer::MailServer;
    @localDomains = ( 
                   NethServer::MailServer->new()->getDeliveryDomains(),
                   NethServer::MailServer::getVirtualMailboxDomain()
                  );

    @virtual_mailbox_domains = @localDomains, @virtual_mailbox_domains;

    scalar @localDomains ? 'enabled' : 'disabled'; 
}
# 
virtual_alias_maps = { scalar @localDomains ? 'hash:/etc/postfix/virtual' : '' }
virtual_mailbox_maps = { scalar @localDomains ? 'hash:/etc/postfix/vmailbox' : '' }
virtual_transport = lmtp:unix:/var/run/dovecot/lmtp

