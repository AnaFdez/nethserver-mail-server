
# Virtual addresses list:
{
    use NethServer::MailServer;
    my $ms = NethServer::MailServer->new();
    my %aliases = $ms->getAliases();

    if(%aliases) {
	$OUT = '';
	while( my ($alias, $mbox) = each %aliases  ) {
	    $OUT .= $alias . "\t\t" . $mbox . "\n";
	}
    } else {
	$OUT = "# no virtual address defined\n";
    }
}

