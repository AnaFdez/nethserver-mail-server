#
# Mailbox owner
#
first_valid_uid = { 
    $uid = (getpwnam('vmail'))[2] or die('Missing vmail user'); 
    $gid = (getgrnam('vmail'))[2] or die('Missing vmail group');
}
last_valid_uid = { $uid; }

#
# Password database: PAM
#
passdb \{
       driver = pam
\}

#
# Static user database - { $uid } corresponds to vmail user
#
userdb \{ 
       driver = static
       args = uid={ $uid } gid={ $gid } home=/var/lib/vmail/private/%u
\}      

mail_location = maildir:~/Maildir

